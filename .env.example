# Application Settings
SECRET_KEY=your-secret-key-here
PROJECT_NAME=Data Modeling Automation
API_V1_STR=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# Database Settings 
DATABASE_URL=sqlite:///./app.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/data_modeling

# Database Connection for Docker
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=data_modeling
DB_HOST=db
DB_PORT=5432

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key
GROQ_API_KEY=your-openai-api-key

# LLM Configuration
LLM_PROVIDER=provider  # groq, openai, etc.
LLM_MODEL=model  # for groq provider

# DBT Settings
DBT_PROJECT_DIR=./dbt_project
DBT_PROFILES_DIR=./dbt_profiles

# Snowflake Connection (for DBT)
DBT_ACCOUNT=your-snowflake-account
DBT_USER=your-snowflake-user
DBT_PASSWORD=your-snowflake-password
DBT_ROLE=your-snowflake-role
DBT_DATABASE=your-snowflake-database
DBT_WAREHOUSE=your-snowflake-warehouse
DBT_SCHEMA=your-snowflake-schema

# Git Settings
GIT_REPO_URL=https://gitlab.com/yourusername/your-repo.git
GIT_USERNAME=your-git-username
GIT_PASSWORD=your-git-password

# GitLab API Settings
GITLAB_TOKEN=your-gitlab-token
GITLAB_API_URL=https://gitlab.com/api/v4

# Redis Cache Settings
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT={time} | {level} | {message}

# Model Templates Configuration
MODEL_TEMPLATES_DIR=./templates/models

# Security
AUTH_DISABLED=false  # Set to true only for development
# Environment configuration

